<% translations.each do |translation| %>
<div class="form-group">
  <label class="col-lg-2 col-sm-2 control-label"><%= translation.locale %></label>
  <div class="col-lg-10">
    <input type="text" class="form-control" name="translations[<%= translation.name %>]" value="<%= translation.text %>" />
  </div>
</div>
<% end %>