<%= render :partial=>"/home/common/banner_title",locals:{title:"最新消息"}%>
<div class="detail-wrapper">
  <div class="container">
    <div class="row padd-90">
      <div class="col-xs-12 col-md-9">
        <div class="detail-header style-2">
          <h2 class="detail-title color-dark-2"><%=@content.name%></h2>
          <div class="tour-info-line clearfix">
            <div class="tour-info fl">
              <img src="/img/calendar_icon_grey.png" alt="">
              <span class="font-style-2 color-dark-2"><%=@content.show_date%></span>
            </div>
          </div>              
        </div>
        <div class="detail-content">
          <div class="detail-content-block">
            <div class="embed-responsive embed-responsive-16by9">
              <div class="img-box n-img" style="background-image: url(<%=@content.cover%>);"></div> 
            </div>          
           <%=raw @content.content%>
          </div>                    
        </div>                  
      </div>
      <!-- 廣告 -->
      <%= render :partial=>"/home/news/custom_pic"%>

    </div>
  </div>
</div>