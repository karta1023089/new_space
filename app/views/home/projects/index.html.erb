<div class="main-wraper pd-50 tabs-page">
  <div class="container">
		<div class="row">
			<div class="col-md-12">
				<div class="simple-tab type-2 tab-wrapper">
					<div class="tab-nav-wrapper">
						<div  class="nav-tab  clearfix">
			        
			        <%@the_group.each_with_index do |value,index|%>
							<div class="nav-tab-item <%if index == 0%>active<%end%>">
