<%= form_for([:backends,ticket],html: {multipart: true, class: "form-horizontal", id:"ticket_form"}) do |f| %>
<div class="form-group">
  <label class="col-lg-3 col-sm-3 control-label"><%= Ticket.human_attribute_name('name') %></label>
  <div class="col-lg-9">
    <input type="text" class="form-control" name="ticket[name]" value="<%= ticket.name %>" required >
  </div>
</div>
<div class="form-group">
  <label class="col-lg-3 col-sm-3 control-label"><%= Ticket.human_attribute_name('image') %>
 <!--  <small>建議尺寸</small> -->
  </label>
  <div class="col-lg-9">
    <input accept="image/*" type="file" class="form-control dropify" data-max-file-size="3M" name="ticket[cover]" data-default-file="<%= ticket.cover %>"> 
    
  </div>
</div>
<hr>
<div class="form-group">
  <label class="col-lg-3 col-sm-3 control-label">群組</label>
  <div class="col-lg-9">
    <input type="text" class="form-control" name="ticket[the_group]" value="<%= ticket.the_group %>" required >
  </div>
</div>
<div class="form-group">
  <label class="col-lg-3 col-sm-3 control-label"><%= Ticket.human_attribute_name('price') %></label>
  <div class="col-lg-9">
    <input type="integer" class="form-control" name="ticket[price]" value="<%= ticket.price %>" required >
  </div>
</div>
<div class="form-group">
  <label class="col-lg-3 col-sm-3 control-label">航空公司</label>
  <div class="col-lg-9">
    <input type="text" class="form-control" name="ticket[intro]" value="<%= ticket.intro %>" required >
  </div>
</div>
<div class="form-group">
  <label class="col-lg-3 col-sm-3 control-label">連結</label>
  <div class="col-lg-9">
    <input type="text" class="form-control" name="ticket[url]" value="<%= ticket.url %>" required >
  </div>
</div>
<div class="form-group">
  <label class="col-lg-3 col-sm-3 control-label">啟程</label>
  <div class="col-lg-9">
    <input type="text" class="form-control" name="ticket[article1]" value="<%= ticket.article1 %>" required >
    <input type="date" class="form-control" name="ticket[go_date]" value="<%= ticket.go_date %>" required >
  </div>
</div>
<div class="form-group">
  <label class="col-lg-3 col-sm-3 control-label">回程</label>
  <div class="col-lg-9">
    <input type="text" class="form-control" name="ticket[article2]" value="<%= ticket.article2 %>" required >
    <input type="date" class="form-control" name="ticket[back_date]" value="<%= ticket.back_date %>" required >
  </div>
</div>

<hr>
<div class="form-group">
  <div class="col-lg-9 col-lg-offset-3">
    <button class="btn btn-danger">
      Submit
    </button>
  </div>
</div>

<% end %>

