<%= form_for([:backends,ticket],html: {multipart: true, class: "form-horizontal", id:"ticket_form"}) do |f| %>
<div class="form-group">
  <label class="col-lg-3 col-sm-3 control-label"><%= Ticket.human_attribute_name('name') %></label>
  <div class="col-lg-9">
    <input type="text" class="form-control" name="ticket[name]" value="<%= ticket.name %>" required >
  </div>
</div>
<div class="form-group">
  <label class="col-lg-3 col-sm-3 control-label"><%= Ticket.human_attribute_name('image') %>
 <!--  <small>建議尺寸</small> -->
  </label>
  <div class="col-lg-9">
    <input accept="image/*" type="file" class="form-control dropify" data-max-file-size="3M" name="ticket[cover]" data-default-file="<%= ticket.cover %>"> 
    
  </div>
</div>
<hr>
<div class="form-group">
  <label class="col-lg-3 col-sm-3 control-label">其他圖片
 <!--  <small>建議尺寸</small> -->
  </label>
  <div class="col-lg-9">
    <input accept="image/*" type="file" class="form-control dropify" data-max-file-size="3M" name="ticket[image1]" data-default-file="<%= ticket.image1 %>"> 
    <input accept="image/*" type="file" class="form-control dropify" data-max-file-size="3M" name="ticket[image2]" data-default-file="<%= ticket.image2%>"> 
    <input accept="image/*" type="file" class="form-control dropify" data-max-file-size="3M" name="ticket[image3]" data-default-file="<%= ticket.image3 %>"> 
    <input accept="image/*" type="file" class="form-control dropify" data-max-file-size="3M" name="ticket[image4]" data-default-file="<%= ticket.image4 %>">
  </div>
</div>
<div class="form-group">
  <label class="col-lg-3 col-sm-3 control-label"><%= Ticket.human_attribute_name('price') %></label>
  <div class="col-lg-9">
    <input type="integer" class="form-control" name="ticket[price]" value="<%= ticket.price %>" required >
  </div>
</div>
<div class="form-group">
  <label class="col-lg-3 col-sm-3 control-label"><%= Ticket.human_attribute_name('intro') %></label>
  <div class="col-lg-9">
    <textarea  class="form-control" name="ticket[intro]"><%= ticket.intro %></textarea>
  </div>
</div>
<div class="form-group">
  <label class="col-lg-3 col-sm-3 control-label">
    <%= Ticket.human_attribute_name('content') %>
  </label>
  <div class="col-lg-9">
    <textarea id="ckeditor" class="form-control" name="ticket[content]"><%= ticket.content %></textarea>
  </div>
</div> 
<script type="text/javascript">
  CKEDITOR.replace('ckeditor', {
    filebrowserUploadUrl : '/backends/images/ck_upload',
    height: '400px',
  });  
</script>
<hr>
<div class="form-group">
  <div class="col-lg-9 col-lg-offset-3">
    <button class="btn btn-danger">
      Submit
    </button>
  </div>
</div>

<% end %>

