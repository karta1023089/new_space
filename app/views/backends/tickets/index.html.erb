<div class="row">
  <div class="col-lg-12">
    <nav class="navbar navbar-inverse" role="navigation">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="fa fa-bars"></span>
        </button>
        <a class="navbar-brand" href="#"><%= t('backends.nav') %></a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse navbar-ex1-collapse">
        <ul class="nav navbar-nav">
          <li>
            <%= link_to t('backends.new') ,new_backends_ticket_path %>
          </li>
        </ul>
      </div><!-- /.navbar-collapse -->
    </nav>
  </div>
</div>
<div class="row">
  <div class="col-lg-4">
    <%= paginate @tickets %>
  </div>
  <div class="col-lg-8">
    <div class="pull-right" style="margin:20px 5px;">
      <form action="<%= backends_tickets_path %>" method="get" class="form-inline" role="form">
        <div class="form-group">
          <label class="sr-only" for="keyword"></label>
          <input type="text" class="form-control" name="k" placeholder="關鍵字搜索" value="<%= params[:k] %>">
        </div>
        <button type="submit" class="btn btn-sm btn-success"><i class="fa fa-search"></i></button>
        <a href="<%= backends_tickets_path %>" class="btn btn-sm btn-danger"><i class="fa fa-times"></i></a>
      </form>
    </div>    
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <header class="panel-heading">
        <%= Ticket.model_name.human %>
      </header>
      <div class="table-responsive">
        <table class="table table-bordered table-advance table-hover text-center">
          <thead>
            <tr>
              <th class="text-center col-lg-1"></th>
              <th class="text-center col-lg-1"><%= Ticket.human_attribute_name('cover') %></th>
              <th class="text-center col-lg-2"><%= Ticket.human_attribute_name('name') %></th>
              <th class="text-center col-lg-2"></th>
            </tr>
          </thead>
          <tbody>
            <%= render partial: "/backends/tickets/show",collection: @tickets,as: :ticket %>
          </tbody>
        </table>
      </div>
    </section>
  </div>
</div>

