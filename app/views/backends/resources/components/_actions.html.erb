<% link_to(url_for(action: "show", id: current_object.id),class: "btn btn-xs btn-success") do %>
<i class="fa fa-search"></i> 查看 
<% end %>   

<%= link_to(url_for(action: "edit", id: current_object.id),class: "btn btn-xs btn-warning") do %>
<i class="fa fa-pencil"></i> 編輯 
<% end %>       

<%= link_to(url_for(action: "destroy", id: current_object.id, format: :js),class: "btn btn-xs btn-danger", remote: true, method: :delete, data: {confirm: "確認刪除嗎?"}) do %>
<i class="fa fa-trash-o"></i> 刪除 
<% end %>