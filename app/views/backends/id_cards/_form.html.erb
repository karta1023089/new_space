<%= form_for([:backends,id_card],html: {multipart: true, class: "form-horizontal", id:"id_card_form"}) do |f| %>
<div class="form-group">
  <label class="col-lg-3 col-sm-3 control-label"><%= IdCard.human_attribute_name('name') %></label>
  <div class="col-lg-9">
    <input type="text" class="form-control" name="id_card[name]" value="<%= id_card.name %>" required >
  </div>
</div>
<div class="form-group">
  <label class="col-lg-3 col-sm-3 control-label"><%= IdCard.human_attribute_name('image') %>
 <!--  <small>建議尺寸</small> -->
  </label>
  <div class="col-lg-9">
    <input accept="image/*" type="file" class="form-control dropify" data-max-file-size="3M" name="id_card[cover]" data-default-file="<%= id_card.cover %>"> 
    
  </div>
</div>
<div class="form-group">
  <label class="col-lg-3 col-sm-3 control-label">天數</label>
  <div class="col-lg-9">
    <input type="integer" class="form-control" name="id_card[make_day]" value="<%= id_card.make_day %>" required >
  </div>
</div>
<hr>
<div class="form-group">
  <label class="col-lg-3 col-sm-3 control-label">
    <%= IdCard.human_attribute_name('content') %>
  </label>
  <div class="col-lg-9">
    <textarea id="ckeditor" class="form-control" name="id_card[content]"><%= id_card.content %></textarea>
  </div>
</div> 
<script type="text/javascript">
  CKEDITOR.replace('ckeditor', {
    filebrowserUploadUrl : '/backends/images/ck_upload',
    height: '400px',
  });  
</script>
<hr>
<div class="form-group">
  <div class="col-lg-9 col-lg-offset-3">
    <button class="btn btn-danger">
      Submit
    </button>
  </div>
</div>

<% end %>

