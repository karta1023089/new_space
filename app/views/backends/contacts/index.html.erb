<div class="row">
  <div class="col-lg-12">
    <nav class="navbar navbar-inverse" role="navigation">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="fa fa-bars"></span>
        </button>
        <a class="navbar-brand" href="#"><%= t('backends.nav') %></a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse navbar-ex1-collapse">
        
      </div><!-- /.navbar-collapse -->
    </nav>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <header class="panel-heading">
        <%= Contact.model_name.human %>
      </header>
      <div class="table-responsive">
        <table class="table table-bordered table-advance table-hover text-center">
          <thead>
            <tr>
              <th class="text-center col-lg-1"><%= Contact.human_attribute_name('created_at') %></th>
              <th class="text-center col-lg-1"><%= Contact.human_attribute_name('name') %></th>
              <th class="text-center col-lg-1"><%= Contact.human_attribute_name('email') %></th>
              <th class="text-center col-lg-4"><%= Contact.human_attribute_name('content') %></th>
               <th class="text-center col-lg-1"></th> 
            </tr>
          </thead>
          <tbody>
            <% @contacts.each do |contact| %>
            <tr>
              <td><%= contact.created_at.strftime("%F") %></br><%= contact.created_at.strftime("%R") %></td>
              <td><%= contact.name %></td>
              <td><%= contact.email %></td>
              <td><pre style="white-space: pre-wrap;word-wrap: break-word;"><%= contact.content %></pre></td>
              <td>
              <%if contact.reply_mark == true%>
              <a href="/backends/contacts/<%=contact.id%>" class="btn btn-info">已回覆</a>
              <%else%>
              <a href="/backends/contacts/<%=contact.id%>" class="btn btn-primary">回覆</a>
              <%end%>
               <%= link_to(backends_contact_path(contact),class: "btn btn-xs btn-danger", method: :delete,data:{confirm: "Are You sure?"}) do %>
                  <i class="fa fa-trash-o"></i>
                <% end %>
              </td> 
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </section>
  </div>
</div>

