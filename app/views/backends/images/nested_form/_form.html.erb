<input type="hidden" class="form-control" name="<%= parameter %>[images_attributes][<%= image_counter %>][id]" value="<%= image.id %>" />
<div class="form-group images">
  <label class="col-lg-3 col-sm-3 control-label">封面(640x480)</label>
  <div class="col-lg-9">
    <div class="row">
      <div class="col-lg-3 text-center">
        <div class="contents_image">
          <img class="images_view" src="<%= image.file %>" alt="">
        </div>
      </div>
      <div class="col-lg-9">
        <div class="form-group">
          <div class="col-lg-12">
            <input type="file" class="form-control images_upload" name="<%= parameter %>[images_attributes][<%= image_counter %>][file]" >
          </div>
        </div> 
        <div class="form-group"> 
          <div class="col-lg-12">
            <input type="text" class="form-control" placeholder="備註" name="<%= parameter %>[images_attributes][<%= image_counter %>][remark]" value="<%= image.remark %>" >
          </div>
        </div>
      </div>
    </div>
  </div>
</div>