<style type="text/css">
  .table-advance tr td {
    vertical-align: middle !important;
    word-break: break-all;
}
</style>
<div class="row">
  <div class="col-lg-12">
    <nav class="navbar navbar-inverse" role="navigation">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
          <span class="sr-only">Toggle navigation</span>
          <span class="fa fa-bars"></span>
        </button>
        <a class="navbar-brand" href="#"><%= t('backends.nav') %></a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse navbar-ex1-collapse">
        <ul class="nav navbar-nav">
          <!-- <li>
            <%= link_to t('backends.new') ,new_backends_images_news_ad_path %>
          </li> -->
        </ul>
      </div><!-- /.navbar-collapse -->
    </nav>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <section class="panel">
      <header class="panel-heading">
        最新消息廣告
      </header>
      <div class="table-responsive">
        <table class="table table-bordered table-advance table-hover text-center">
          <thead>
            <tr>
              
              <th class="text-center col-lg-2">名稱</th>
              <th class="text-center col-lg-4"><%= Image.human_attribute_name('url') %></th>
              <th class="text-center col-lg-2"><%= Image.model_name.human %></th>
              <th class="text-center col-lg-2"></th>
            </tr>
          </thead>
          <tbody>
            <% @slides.each_with_index do |slide,index| %>
            <tr>
           
              <td><%= slide.name%></td>
              <td><%= slide.url %></td>
              <td><img style="max-width: 200px; max-height: 100px;" src="<%= slide.file %>"></td>
              <td>
                <a href="<%= edit_backends_images_news_ad_path(slide,index: index)%>" class="btn btn-xs btn-warning">
                  <i class="fa fa-pencil"></i>
                </a>
               
              </td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </section>
  </div>
</div>

