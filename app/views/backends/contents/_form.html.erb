<%= form_for([:backends,content],html: {multipart: true, class: "form-horizontal", id:"article_form"}) do |f| %>
<div class="form-group">
  <label class="col-lg-3 col-sm-3 control-label"><%= Content.human_attribute_name('name') %></label>
  <div class="col-lg-9">
    <input type="text" class="form-control" name="content[name]" value="<%= content.name %>" required >
  </div>
</div>
<div class="form-group">
  <label class="col-lg-3 col-sm-3 control-label"><%= Content.human_attribute_name('show_date') %></label>
  <div class="col-lg-9">
    <input type="date" class="form-control" name="content[show_date]" value="<%= content.show_date %>" required >
  </div>
</div>
<div class="form-group">
  <label class="col-lg-3 col-sm-3 control-label"><%= Content.human_attribute_name('image') %>
 <!--  <small>建議尺寸</small> -->
  </label>
  <div class="col-lg-9">
    <input accept="image/*" type="file" class="form-control dropify" data-max-file-size="3M" name="content[cover]" data-default-file="<%= content.cover %>"> 
    
  </div>
</div>
<hr>
<div class="form-group">
  <label class="col-lg-3 col-sm-3 control-label">
    <%= Content.human_attribute_name('content') %>
  </label>
  <div class="col-lg-9">
    <textarea id="ckeditor" class="form-control" name="content[content]"><%= content.content %></textarea>
  </div>
</div> 
<script type="text/javascript">
  CKEDITOR.replace('ckeditor', {
    filebrowserUploadUrl : '/backends/images/ck_upload',
    height: '400px',
  });  
</script>
<hr>
<div class="form-group">
  <div class="col-lg-9 col-lg-offset-3">
    <button class="btn btn-danger">
      Submit
    </button>
  </div>
</div>

<% end %>
