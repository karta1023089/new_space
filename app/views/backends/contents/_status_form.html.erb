<form action="<%= event_backends_article_path(article) %>" method="post" class="form-horizontal">
  <%= token_tag nil %>
  <div class="form-group">
    <label class="col-lg-3 col-sm-3 control-label"><%= Article.human_attribute_name('event') %></label>
    <div class="col-lg-9">
      <select name="event" class="form-control">
        <% events.each do |event| %>
        <option value="<%= event %>"><%= Article.human_attribute_name(event) %></option>
        <% end %>
      </select>
    </div>
  </div>
  <div class="form-group">
    <label class="col-lg-3 col-sm-3 control-label"><%= Article.human_attribute_name('remark') %></label>
    <div class="col-lg-9">
      <textarea class="form-control" name="article[remark]"><%= article.remark %></textarea>
    </div>
  </div>   
  <div class="form-group">
    <div class="col-lg-9 col-lg-offset-3">
      <button class="btn btn-danger">
        Submit
      </button>
    </div>
  </div>  
</form>