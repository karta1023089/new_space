<%= form_for([:backends,page],html: {multipart: true, class: "form-horizontal", id:"article_form"}) do |f| %>
<div class="form-group">
  <label class="col-lg-3 col-sm-3 control-label"><%= Page.human_attribute_name('name') %></label>
  <div class="col-lg-9">
    <input type="text" class="form-control" name="page[name]" value="<%= page.name %>" required >
  </div>
</div>
<hr>
<div class="form-group">
  <label class="col-lg-3 col-sm-3 control-label">
    <%= Page.human_attribute_name('content') %>
  </label>
  <div class="col-lg-9">
    <textarea id="ckeditor" class="form-control" name="page[content]"><%= page.content %></textarea>
  </div>
</div> 
<script type="text/javascript">
  CKEDITOR.replace('ckeditor', {
    filebrowserUploadUrl : '/backends/images/ck_upload',
    height: '400px',
  });  
</script>
<hr>
<div class="form-group">
  <div class="col-lg-9 col-lg-offset-3">
    <button class="btn btn-danger">
      Submit
    </button>
  </div>
</div>

<% end %>
